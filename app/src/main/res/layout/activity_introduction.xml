<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <com.airbnb.lottie.LottieAnimationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/anim"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_fileName="Animasi/wallet.json"
        app:lottie_loop="true" />

    <com.pixplicity.fontview.FontAppCompatTextView
        android:id="@+id/textt"
        style="@style/FontTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anim"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="Welcome to Mona Application \n Monitoring Income and Expense"
        android:textColor="#999"
        android:textSize="13.5dp" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/textt"
        android:src="@drawable/profileapalah"/>

    <LinearLayout
        android:id="@+id/llstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/bgincome"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:layout_marginBottom="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="12dp">

        <com.pixplicity.fontview.FontAppCompatTextView
            style="@style/FontTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>