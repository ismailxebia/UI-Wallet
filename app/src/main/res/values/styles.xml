<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#32000000</item>
        <item name="android:colorBackground">#000</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">#32000000</item>
        <item name="android:colorBackground">#000</item>
    </style>

    <style name="LinearProgressGreen" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#25c166</item>
        <item name="android:progressBackgroundTint">#c6c6c6</item>
    </style>
    <style name="LinearProgressBlue" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#42b2f7</item>
        <item name="android:progressBackgroundTint">#c6c6c6</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FontTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="pix_font">fonts/Karla-Regular.ttf</item>
        <item name="pix_fontBold">fonts/Karla-Bold.ttf</item>
        <item name="pix_fontItalic">fonts/Karla-Italic.ttf</item>
        <item name="pix_fontBoldItalic">fonts/Karla-BoldItalic.ttf</item>
    </style>

</resources>
